extends layouts/layout.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(type='text' placeholder='Title' name='title' required)
        input(type='text' placeholder='Summary' name='summary' required)
        input(type='number' placeholder='Year' name='year' required)
        input(type='number' placeholder='Rating' name='rating' required)
        input(type='text' placeholder='Genres(Separated by comma)' name='genres' required)
        input(type='submit' value='Upload')